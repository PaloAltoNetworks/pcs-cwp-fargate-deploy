{
    "containerDefinitions": [ 
       { 
          "essential": true,
          "image": "${IMAGE_NAME}",
          "name": "sample-fargate-app",
          "portMappings": [ 
             { 
                "containerPort": 80,
                "hostPort": 80,
                "protocol": "tcp"
             }
          ]
       }
    ],
    "cpu": "256",
    "family": "${TASK_DEFINTION_NAME}",
    "memory": "512",
    "networkMode": "awsvpc",
    "runtimePlatform": {
         "operatingSystemFamily": "LINUX"
     },
    "requiresCompatibilities": [ 
        "FARGATE" 
     ]
 }